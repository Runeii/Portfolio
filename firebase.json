{
  "functions": {
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run lint"
    ],
    "source": "functions"
  },
  "hosting": {
    "public": "dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/project",
        "destination": "/index.html"
      },
      {
        "source": "/project/**",
        "destination": "/index.html"
      },
      {
        "source": "/ping",
        "function": "ping"
      }
    ],
    "headers": [
      {
        "source" : "**/*.@(js|css)",
        "headers" : [ {
          "key" : "Cache-Control",
          "value" : "max-age=604800"
        } ]
      },
      {
        "source": "**/*.@(ico)",
        "headers": [ {
          "key": "Cache-Control",
          "value": "max-age=604800"
        } ]
      },
      {
        "source": "**/*.@(jpg|jpeg|gif|png|svg)",
        "headers": [ {
          "key": "Cache-Control",
          "value": "max-age=30672000"
        } ]
      }
    ]
  
  }
}
